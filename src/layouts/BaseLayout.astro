---
// src/layouts/BaseLayout.astro
// This is a fresh, clean layout file.
import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle.astro';

// We ONLY define the props we absolutely need.
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Naga Nitish Chamala - Personal Portfolio" } = Astro.props;
const siteName = "naganitish.com";
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <title>{title} | {siteName}</title>
  <meta name="description" content={description} />
</head>
<body>
  
  <header class="site-header">
    <a href="/" class="site-title">{siteName}</a>
    <ThemeToggle />
  </header>

  <main>
    <slot /> </main>

  <footer>
    <p>&copy; {new Date().getFullYear()} {siteName}. All rights reserved.</p>
  </footer>
  
  <style>
    /* Add some basic layout styling for the new header */
    .site-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      border-bottom: 1px solid var(--border-color);
      margin-bottom: 2rem;
    }
    .site-title {
      font-weight: bold;
      text-decoration: none;
      color: var(--text-color);
    }
  </style>
</body>
</html>
