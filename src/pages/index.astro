---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import ProjectCard from '../components/ProjectCard.astro';
import ProjectModal from '../components/ProjectModal.astro';

const myName = "Naga Nitish Chamala";
const allProjects = (await getCollection('portfolio')).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---
<BaseLayout title="Home" description="Personal portfolio for Naga Nitish Chamala, researcher in CFD, multiphase flows, and thermal analysis.">
  
  <div class="intro-background-box"> {/* NEW: Wrapper for the background box */}
    <div class="intro-section">
      <div class="intro-text">
        <h1>Hello, I'm <span class="highlight-name">{myName}</span>!</h1> {/* NEW: Span for name styling */}
        <p>Highly motivated researcher with expertise in CFD, multiphase flows, and thermal analysis, demonstrated through advanced numerical simulations, model development, and experimental validation. Proficient in industry-standard software (Fluent/CFX/Icepak, OpenFOAM, StarCCM+) and programming languages (C++, Python). Proven ability to improve performance in complex fluid and thermal systems.</p>
      </div>
      <div class="intro-image-container">
        <img
          src="/images/naga_photo.jpg"
          alt="A picture of {myName}"
          class="profile-picture"
        />
      </div>
    </div>

    <div class="button-container">
      <a
        href="https://www.linkedin.com/in/naga-nitish-chamala-0b0b31103/"
        target="_blank"
        rel="noopener noreferrer"
        class="button-icon linkedin-button" {/* NEW: Specific class for LinkedIn color */}
        aria-label="LinkedIn Profile"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.784-1.75-1.75s.784-1.75 1.75-1.75 1.75.784 1.75 1.75-.784 1.75-1.75 1.75zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
        </svg>
      </a>
      
      <a
        href="/resume.pdf"
        target="_blank"
        rel="noopener noreferrer"
        class="button button-resume"
      >
        Resume {/* NEW: Text changed to "Resume" */}
      </a>
    </div>
  </div> {/* END: intro-background-box */}

  <section class="portfolio-hero">
    <h2>Portfolio Showcase</h2>
    <p>A selection of projects I've worked on. Click any project to see the details.</p>
  </section>
  
  <section class="portfolio-grid-section">
    {allProjects.length > 0 ? (
      <div class="project-grid">
        {allProjects.map(project => (
          <ProjectCard
            slug={project.slug}
            title={project.data.title}
            description={project.data.description}
            coverImage={project.data.coverImage}
            tags={project.data.tags}
            liveLink={project.data.liveLink}
            repoLink={project.data.repoLink}
            videoLink={project.data.videoLink}
            publishDate={project.data.publishDate}
          />
        ))}
      </div>
    ) : (
      <p class="no-projects">Projects are being added. Stay tuned!</p>
    )}
  </section>

  <ProjectModal />

  <style>
    /* NEW: Intro Background Box */
    .intro-background-box {
      background-color: var(--secondary-bg-color); /* Slightly different background */
      border-radius: 12px; /* Rounded corners */
      padding: 3rem 2rem; /* More padding inside the box */
      margin: 2rem auto; /* Center the box and give it vertical space */
      max-width: 1000px; /* Limit its width */
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    /* Intro Section */
    .intro-section {
      display: flex;
      align-items: center; /* Vertically align items */
      gap: 2rem;
      flex-wrap: wrap; 
      margin-bottom: 2rem; /* Space between text/image and buttons */
    }
    .intro-text {
      flex: 2;
      min-width: 300px;
    }
    
    /* Justified paragraph text */
    .intro-text p {
      text-align: justify;
      line-height: 1.7; /* Improve readability */
    }

    /* NEW: Name Highlight */
    .highlight-name {
      font-size: 1.3em; /* Make it bigger relative to the h1 */
      color: var(--accent-color); /* Use your accent color */
      font-weight: 800; /* Make it stand out more */
      display: inline-block; /* Helps with line breaks */
    }
    
    .intro-image-container {
      flex: 1;
      display: flex;
      justify-content: center; /* Center horizontally */
      align-items: center;   /* Center vertically within its container */
      min-width: 200px;
    }
    .profile-picture {
      width: 200px;
      height: 200px;
      object-fit: cover;
      border-radius: 50%;
      border: 3px solid var(--accent-color); /* Changed border color for contrast */
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15); /* Slightly stronger shadow */
    }
    
    /* Buttons */
    .button-container {
      display: flex;
      flex-wrap: wrap;
      gap: 1.5rem; /* Increased gap between buttons */
      justify-content: center;
      align-items: center; 
      margin-top: 2rem; /* Pushes buttons down from intro text */
    }

    /* Base style for text buttons */
    .button {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      background-color: var(--accent-color);
      color: #fff;
      text-decoration: none;
      border-radius: 6px;
      font-weight: 600;
      border: 1px solid var(--accent-color);
      transition: all 0.2s ease-out;
      white-space: nowrap; /* Prevent text from wrapping */
    }
    .button:hover {
      background-color: var(--link-hover-color);
      border-color: var(--link-hover-color);
      transform: translateY(-2px);
    }
    
    /* Darker resume button style */
    .button.button-resume {
      background-color: var(--link-hover-color); /* Uses hover color as base */
      border-color: var(--link-hover-color);
    }
    .button.button-resume:hover {
      filter: brightness(90%); /* Makes it even darker on hover */
      transform: translateY(-2px);
    }

    /* LinkedIn icon button style */
    .button-icon {
      display: inline-flex;
      justify-content: center;
      align-items: center;
      width: 50px;  
      height: 50px; 
      background-color: var(--accent-color);
      color: #fff; 
      text-decoration: none;
      border-radius: 50%; 
      border: 1px solid var(--accent-color);
      transition: all 0.2s ease-out;
    }
    .button-icon:hover {
      background-color: var(--link-hover-color);
      border-color: var(--link-hover-color);
      transform: translateY(-2px);
    }
