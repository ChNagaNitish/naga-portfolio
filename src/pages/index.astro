---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import ProjectCard from '../components/ProjectCard.astro';
import ProjectModal from '../components/ProjectModal.astro';

const myName = "Naga Nitish Chamala";
const allProjects = (await getCollection('portfolio')).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---
<BaseLayout title="Home" description="Personal portfolio for Naga Nitish Chamala, researcher in CFD, multiphase flows, and thermal analysis.">
  
  <div class="intro-section">
    <div class="intro-text">
      <h1>Hello, I'm {myName}!</h1>
      <p>Highly motivated researcher with expertise in CFD, multiphase flows, and thermal analysis, demonstrated through advanced numerical simulations, model development, and experimental validation. Proficient in industry-standard software (Fluent/CFX/Icepak, OpenFOAM, StarCCM+) and programming languages (C++, Python). Proven ability to improve performance in complex fluid and thermal systems.</p>
    </div>
    <div class="intro-image-container">
      <img
        src="/images/naga_photo.jpg"
        alt="A picture of {myName}"
        class="profile-picture"
      />
    </div>
  </div>

  <div class="button-container">
    <a
      href="https://www.linkedin.com/in/naga-nitish-chamala-0b0b31103/"
      target="_blank"
      rel="noopener noreferrer"
      class="button"
    >
      LinkedIn
    </a>
    <a
      href="/resume.pdf"
      target="_blank"
      rel="noopener noreferrer"
      class="button"
    >
      View Resume
    </a>
  </div>

  <section class="portfolio-hero">
    <h2>Portfolio Showcase</h2>
    <p>A selection of projects I've worked on. Click any project to see the details.</p>
  </section>
  
  <section class="portfolio-grid-section">
    {allProjects.length > 0 ? (
      <div class="project-grid">
        {allProjects.map(project => (
          <ProjectCard
            slug={project.slug}
            title={project.data.title}
            description={project.data.description}
            coverImage={project.data.coverImage}
            tags={project.data.tags}
            liveLink={project.data.liveLink}
            repoLink={project.data.repoLink}
            videoLink={project.data.videoLink}
            publishDate={project.data.publishDate}
          />
        ))}
      </div>
    ) : (
      <p class="no-projects">Projects are being added. Stay tuned!</p>
    )}
  </section>

  <ProjectModal />

  <style>
    /* Intro Section */
    .intro-section {
      display: flex;
      align-items: center;
      gap: 2rem;
      flex-wrap: wrap; /* Wraps on small screens */
      margin-bottom: 2rem;
    }
    .intro-text {
      flex: 2;
      min-width: 300px;
    }
    .intro-image-container {
      flex: 1;
      display: flex;
      justify-content: center;
      min-width: 200px;
    }
    .profile-picture {
      width: 200px;
      height: 200px;
      object-fit: cover;
      border-radius: 50%;
      border: 3px solid var(--border-color);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    /* Buttons */
    .button-container {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: center;
      margin: 2rem 0 3rem 0;
    }
    .button {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      background-color: var(--accent-color);
      color: #fff;
      text-decoration: none;
      border-radius: 6px;
      font-weight: 600;
      border: 1px solid var(--accent-color);
      transition: all 0.2s ease-out;
    }
    .button:hover {
      background-color: var(--link-hover-color);
      border-color: var(--link-hover-color);
      transform: translateY(-2px);
    }

    /* Projects */
    .portfolio-hero {
      text-align: center;
      margin-bottom: 3rem;
    }
    .portfolio-hero h2 {
      font-size: 2.5rem;
      margin-bottom: 0.5em;
    }
    .portfolio-hero p {
      font-size: 1.125rem;
      color: var(--secondary-text-color);
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
    }
    .project-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(min(100%, 350px), 1fr));
      gap: 2rem;
    }
    .no-projects {
      text-align: center;
      font-style: italic;
      color: var(--secondary-text-color);
      padding: 2rem;
    }
  </style>
</BaseLayout>
